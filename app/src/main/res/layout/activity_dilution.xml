<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/DilutionFactor"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="Dilution Factor"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Percentage_Concentration"
            android:layout_width="291dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="Dilution factor is often expressed as a ratio. The simplest formula for both types or dilution factor are as follows:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Equations"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="S:D = stock volume:dilutant volume \nS:T = stock volume:total volume"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextView3"
            android:layout_width="291dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/greatest_common_factor"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Examples"
            android:layout_width="291dp"
            android:layout_height="264dp"
            android:layout_gravity="center_horizontal"
            android:text="S:D = 1:(stock volume/dilutant volume) \nS:T = 1:(stock volume/total volume)."
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>